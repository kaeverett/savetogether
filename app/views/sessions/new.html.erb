<h1>Please log in with your account</h1>
<% form_tag session_path do -%>

	<div class="field_row">
		<%= label_tag 'login', "Username" %>
		<%= text_field_tag 'login', @login %><br />
	</div>

	<div class="field_row">
		<%= label_tag 'password' %>
		<%= password_field_tag 'password', nil %><br/>
	</div>
	<p><%= link_to 'Forgot Password?', forgot_password_path %></p>
  
<% if_recaptcha? do %>
	<div class="field_row">
		<label for="recaptcha">Please enter the following words below.</label>
		<%= recaptcha_tags %><br />
	</div>
<% end %>

	Stay logged in on this computer:<br/>
	<div class="field_row">
		<%= label_tag 'remember_me', 'Remember me' %>
		<%= check_box_tag 'remember_me', '1', @remember_me %><br />
	</div>

	<p><%= submit_tag 'Log in', :disable_with => "Signing in&hellip;" %></p>
	<p>If you are not already a SaveTogether member, create a new account by clicking <%= link_to "here", signup_path, { :title => "Create an account" } %>.</p>
<% end -%>

